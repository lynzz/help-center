{
  "name": "help-center",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@hc/api",
    "dev:web": "turbo run dev --filter=@hc/web -- --port 3003",
    "build": "turbo run build",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^1.12.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.15.4"
}
